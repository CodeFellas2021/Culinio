<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".chef_list_item"
    android:background="@drawable/edittext_design"
    android:id="@+id/cll_parent_layout"
    android:layout_marginBottom="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/cll_chef_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cll_delete"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:background="@color/grey"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/cll_delete" />

    <TextView
        android:id="@+id/cll_chef_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:background="@color/grey"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cll_chef_name"
        android:layout_toLeftOf="@+id/cll_delete"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/cll_delete" />

    <ImageButton
        android:id="@+id/cll_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:layout_alignParentRight="true"
        android:background="@drawable/cup_design"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        />


</RelativeLayout>